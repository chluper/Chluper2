		environmentPanel.setElementSize(2 * zoomSlider.getValue());
		environmentScrollPane.setViewportView(environmentPanel);
	}//GEN-LAST:event_zoomSliderStateChanged

	public void nextStep() {
		// ustawianie flagi odswiezenia
		refresh = true;
	}

	public void simulationError(final Throwable t) {
		final JPanel that = this;
		EventQueue.invokeLater(new Runnable() {

			public void run() {
				// komunikat o bledzie
				JOptionPane.showMessageDialog(that, t.getMessage(), "Blad", JOptionPane.ERROR_MESSAGE);
			}
		});
	}

	/**
	 * Metoda wywolywana kiedy ma nastapic odswiezenie srodowiska
	 */
	private void refreshEnvironment() {
		// wyluskiwanie kopi
		final Environment environment = simulator.getEnvironmentCopy();
		// dzialanie na GUI
		EventQueue.invokeLater(new Runnable() {

			public void run() {
				// numer kroku
				currentStepLabel.setText("" + environment.getSimulationStep());
				// statystyki
				String results = "Obsluzeni studenci: " + environment.getServicedStudentNumber() + "\n";
				DecimalFormat format = new DecimalFormat("#.##");
				results += "Sredni czas: " + format.format(environment.getAverageStudentServiceTime()) + "\n";
				results += "Najdluzszy czas: " + environment.getMaximalStudentServiceTime();
				resultTextArea.setText(results);
				// podglad
				environmentPanel.newStep(environment);
				repaint();
			}
		});
	}

	/**
	 * Twozenie zadania dla timera.
	 * Zadanie polega na odswiezeniu
	 * @return
	 */
	private TimerTask createTimerTask() {
		return new TimerTask() {

			@Override
			public void run() {
				if (refresh) {
					refreshEnvironment();
					refresh = false;
				}
			}
		};
	}

	/**
	 * Metoda dodaje sluchacza od klikniecia na panel srodowiska
	 */
	private void addEnvironmentPanelMouseListener() {
		// wlaczanie i wylaczanie
		environmentPanel.addMouseListener(new MouseAdapter() {

			@Override
			public void mouseClicked(MouseEvent e) {
				// lewy przycisk - start/stop
				if (e.getButton() == MouseEvent.BUTTON1) {
					simulator.setContinousSimulation(!simulator.isContinousSimulation());
					startButton.setEnabled(!simulator.isContinousSimulation());
					pauseButton.setEnabled(simulator.isContinousSimulation());
				}
				if (e.getButton() == MouseEvent.BUTTON3) {
					simulator.setStepsToMake(1);
				}
			}
		});

		// zoom
		environmentPanel.addMouseWheelListener(new MouseWheelListener() {

			public void mouseWheelMoved(MouseWheelEvent e) {
				if (e.getModifiers() == MouseWheelEvent.ALT_MASK || e.getModifiers() == MouseWheelEvent.CTRL_MASK) {
					zoomSlider.setValue(zoomSlider.getValue() + e.getWheelRotation());
				} else {
					speedSlider.setValue(speedSlider.getValue() - e.getWheelRotation() * 30);
				}
			}
		});
	}
