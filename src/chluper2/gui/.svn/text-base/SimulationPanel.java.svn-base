	/** Creates new form SimulationPanel */
	public SimulationPanel(Simulator simulator) {
		this.simulator = simulator;
		initComponents();

		// panel
		environmentPanel = new EnvironmentPanel(simulator.getEnvironmentCopy());
		// sluchacz zdarzen
		addEnvironmentPanelMouseListener();
		// dodawanie do gui
		environmentScrollPane.setViewportView(environmentPanel);

		// estetyka
		pauseButton.setEnabled(false);

		// zoom
		environmentPanel.setElementSize(2 * zoomSlider.getValue());
		// predkosc
		simulator.setDeleyBetweenSteps(1000 - speedSlider.getValue());

		// rejestrowanie sluchacza
		simulator.addSimulatorListener(this);

		// tworzenie zadania
		timer.schedule(createTimerTask(), 0, 100);

		// odswiezenie srodowiska
		refreshEnvironment();
	}

